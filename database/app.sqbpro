global_filter/></table></browse_table_settings></tab_browse><tab_sql><sql name="SQL 1*">CREATE TABLE Users (
    Id INTEGER PRIMARY KEY AUTOINCREMENT,
    Username TEXT NOT NULL UNIQUE,
    PasswordHash TEXT NOT NULL,
    Role TEXT CHECK(Role IN ('admin', 'student')) NOT NULL,
    Grade INTEGER CHECK (Grade IN (10,11,12)),
    CreatedAt TEXT DEFAULT CURRENT_TIMESTAMP
);
CREATE TABLE Topics (
    Id INTEGER PRIMARY KEY AUTOINCREMENT,
    Name TEXT NOT NULL,
    ParentId INTEGER,
    Level TEXT CHECK (Level IN ('large', 'small')) NOT NULL,
    IsActive INTEGER DEFAULT 1 CHECK (IsActive IN (0,1)),
    FOREIGN KEY (ParentId) REFERENCES Topics(Id)
);
CREATE TABLE Exercises (
    Id INTEGER PRIMARY KEY AUTOINCREMENT,
    TopicId INTEGER NOT NULL,
    Content TEXT NOT NULL,
    OptionA TEXT NOT NULL,
    OptionB TEXT NOT NULL,
    OptionC TEXT NOT NULL,
    OptionD TEXT NOT NULL,
    CorrectOption TEXT CHECK(CorrectOption IN ('A','B','C','D')) NOT NULL,
    Difficulty INTEGER CHECK(Difficulty IN (1,2,3)) NOT NULL,
    Grade INTEGER CHECK (Grade IN (10,11,12)),
    FOREIGN KEY (TopicId) REFERENCES Topics(Id)
);
CREATE TABLE Exams (
    Id INTEGER PRIMARY KEY AUTOINCREMENT,
    UserId INTEGER NOT NULL,
    TopicId INTEGER NOT NULL,
    TotalScore REAL,
    CreatedAt TEXT DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (UserId) REFERENCES Users(Id),
    FOREIGN KEY (TopicId) REFERENCES Topics(Id)
);
CREATE TABLE StudentResults (
    Id INTEGER PRIMARY KEY AUTOINCREMENT,
    ExamId INTEGER NOT NULL,
    ExerciseId INTEGER NOT NULL,
    SelectedOption TEXT CHECK(SelectedOption IN ('A','B','C','D')),
    IsCorrect INTEGER CHECK(IsCorrect IN (0,1)),
    FOREIGN KEY (ExamId) REFERENCES Exams(Id),
    FOREIGN KEY (ExerciseId) REFERENCES Exercises(Id)
);
CREATE TABLE SkillProfiles (
    Id INTEGER PRIMARY KEY AUTOINCREMENT,
    UserId INTEGER NOT NULL,
    TopicId INTEGER NOT NULL,
    Accuracy REAL,
    SkillLevel TEXT CHECK(SkillLevel IN ('Yeu','TrungBinh','Kha','Tot')),
    UpdatedAt TEXT DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (UserId) REFERENCES Users(Id),
    FOREIGN KEY (TopicId) REFERENCES Topics(Id)
);
CREATE TABLE AIRequestLogs (
    Id INTEGER PRIMARY KEY AUTOINCREMENT,
    UserId INTEGER NOT NULL,
    ExerciseId INTEGER NOT NULL,
    Prompt TEXT NOT NULL,
    CreatedAt TEXT DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (UserId) REFERENCES Users(Id),
    FOREIGN KEY (ExerciseId) REFERENCES Exercises(Id)
);
